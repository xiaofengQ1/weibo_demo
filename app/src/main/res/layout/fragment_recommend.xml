<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.RecommendFragment">
<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:text="暂无网络连接"
    android:gravity="center"
    android:visibility="gone"
    android:id="@+id/meiyouwang_text"
    android:textColor="@color/gray_2"
    />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/IH_frame_layout"
        android:layout_marginTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recommend_linear1"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/load_image"
                android:src="@drawable/load_image"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="21dp"
                android:id="@+id/load_text"
                android:text="加载中"
                android:textStyle="bold"

                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="16dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recommend_linear2"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="56dp"
                android:layout_height="61dp"
                android:src="@drawable/null_page"
                android:id="@+id/fail_image"
                />
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/fail_text1"
                android:text="网络请求失败"
                android:textSize="15dp"
                android:textColor="@color/gray"
                android:layout_marginTop="18dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="68dp"
                android:layout_height="38dp"
                android:id="@+id/fail_text2"
                android:gravity="center"
                android:text="重试"
                android:textColor="@color/blue"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:background="@drawable/light_blue"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recommend_linear3"
            android:orientation="vertical"
            android:visibility="visible"
            >
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler_view_container"
                />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>